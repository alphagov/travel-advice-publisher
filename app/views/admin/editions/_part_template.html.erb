<%
  index_placeholder = "{{ insert-part-index-here }}"
  part = {
    title: "Untitled part",
  }
%>

<template id="new-part-template">
  <div class="govuk-accordion__section">
    <div class="govuk-accordion__section-header">
      <h2 class="govuk-accordion__section-heading">
        <button type="button" aria-controls="parts-content-<%= index_placeholder %>" class="govuk-accordion__section-button" aria-expanded="false">
          <span class="govuk-accordion__section-heading-text" id="parts-heading-<%= index_placeholder %>">
            <span class="govuk-accordion__section-heading-text-focus">
              <%= render 'part_title', part: part %>
            </span>
          </span>
          <span class="govuk-visually-hidden govuk-accordion__section-heading-divider">, </span>
          <span class="govuk-accordion__section-toggle" data-nosnippet="">
            <span class="govuk-accordion__section-toggle-focus">
              <span class="govuk-accordion-nav__chevron govuk-accordion-nav__chevron--down"></span>
              <span class="govuk-accordion__section-toggle-text">Show <span class="govuk-visually-hidden"> this section</span>
              </span>
            </span>
          </span>
        </button>
      </h2>
    </div>
    <div id="parts-content-<%= index_placeholder %>" class="govuk-accordion__section-content" aria-labelledby="parts-heading-<%= index_placeholder %>">
      <%= render 'part', part: part, index: index_placeholder %>
    </div>
  </div>
</template>
