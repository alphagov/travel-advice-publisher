<%= render "govuk_publishing_components/components/input", {
  label: {
    text: "Title",
    bold: true,
  },
  name: "edition[parts_attributes][#{index}][title]",
  value: part[:title],
} %>

<%= render "govuk_publishing_components/components/textarea", {
  label: {
    text: "Body",
    bold: true,
  },
  name: "edition[parts_attributes][#{index}][body]",
  rows: 15,
  value: part[:body],
} %>

<%= render "govuk_publishing_components/components/input", {
  label: {
    text: "Slug",
    bold: true,
  },
  name: "edition[parts_attributes][#{index}][slug]",
  hint: 'For example "title-of-part" (no spaces, apostrophes, etc).',
  value: part[:slug],
} %>

<input type="hidden" class="edition-part__id" name="edition[parts_attributes][<%= index %>][id]" value="<%= part[:id] %>" />
<input type="hidden" class="edition-part__destroy" name="edition[parts_attributes][<%= index %>][_destroy]" value="false" />
<input type="hidden" class="edition-part__order" name="edition[parts_attributes][<%= index %>][order]" value="<%= part[:order] %>" />

<div class="remove-part-button">
  <%= render "govuk_publishing_components/components/button", {
    text: "Remove part",
    destructive: true,
    classes: "js-part__remove-button",
    data_attributes: {
      "part-index": index,
    },
  } %>
</div>
