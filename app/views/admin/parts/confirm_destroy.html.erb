<% content_for :breadcrumbs do %>
  <%= render "govuk_publishing_components/components/breadcrumbs", {
    breadcrumbs: [
      {
        title: 'All countries',
        url: admin_countries_path,
      },
      {
        title: @country.name,
        url: admin_country_path(@country.slug),
      },
      {
        title: "Editing #{@country.name}",
        url: edit_admin_edition_path(@edition),
      },
      {
        title: "Delete #{@part.title}",
      },
    ]
  } %>
<% end %>

<%= content_for :title, "Delete #{@part.title}" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @part, url: admin_country_edition_part_path(@edition.country_slug, @edition, @part), method: :delete do |f| %>
      <p class="govuk-body">Are you sure you want to delete this part?</p>
      <p class="govuk-body">This will delete all content you have added and cannot be undone.</p>

      <div class="govuk-button-group">


        <%= render "govuk_publishing_components/components/button", {
          text: "Yes, delete part",
          destructive: true,
        } %>

        <%= link_to "Cancel", edit_admin_edition_path(@edition), class: "govuk-link" %>
      </div>
    <% end %>
  </div>
</div>
