<% content_for :breadcrumbs do %>
  <%= render "govuk_publishing_components/components/breadcrumbs", {
    breadcrumbs: [
      {
        title: 'All countries',
        url: admin_countries_path,
      },
      {
        title: @country.name,
        url: admin_country_path(@country.slug),
      },
      {
        title: "Editing #{@country.name}",
        url: edit_admin_edition_path(@edition),
      },
      {
        title: "New part",
      },
    ]
  } %>
<% end %>

<%= content_for :title, 'New part' %>

<%= render 'shared/error_summary', object: @part %>

<%= form_for @part, url: admin_country_edition_parts_path(@edition.country_slug, @edition), method: :post do |f| %>
  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: "Title",
      bold: true,
    },
    name: "part[title]",
    id: "part_title",
    error_items: errors_for(@part, :title)
  } %>

  <%= render "govuk_publishing_components/components/textarea", {
    label: {
      text: "Body",
      bold: true,
    },
    name: "part[body]",
    id: "part_body",
    rows: 15,
    error_items: errors_for(@part, :body)
  } %>

  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: "Slug",
      bold: true,
    },
    name: "part[slug]",
    id: "part_slug",
    hint: 'For example "title-of-part" (no spaces, apostrophes, etc).',
    error_items: errors_for(@part, :slug)
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Save",
  } %>
<% end %>
